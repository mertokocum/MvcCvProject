<form method="post">
    @foreach(var item in Model)
    {
        <div style="margin-top:5rem;" class="resume-section-content">
            <div class="field" tabindex="1">
                <label for="AdSoyad">
                    <i class=""></i>Ad Soyad
                </label>
                <input name="Ad" type="text" value="@item.Ad" required></input>
            </div>
            <div class="field" tabindex="2">
                <label for="email">
                    <i class=""></i>Soyad
                </label>
                <input name="Soyad" type="text" value="@item.Soyad" required></input>
            </div>
            <div class="field" tabindex="3">
                <label for="text">
                    <i class=""></i>Adres
                </label>
                <input name="Adres" type="text" value="@item.Adres" required></input>
            </div>
            <div class="field" tabindex="4">
                <label for="message">
                    <i class=""></i>Telefon
                </label>
                <input name="Telefon" type="text" value="@item.Telefon" required></input>
            </div>
            <div class="field" tabindex="5">
                <label for="message">
                    <i class=""></i>Mail
                </label>
                <input name="Mail" type="text" value="@item.Mail" required></input>
            </div>
            <div class="field" tabindex="6">
                <label for="message">
                    <i class=""></i>Resim
                </label>
                <input name="Resim" type="text" value="@item.Resim" required></input>
            </div>
            <div class="field" tabindex="7">
                <label for="message">
                    <i class=""></i>Açıklama
                </label>
                <textarea rows="5" name="Aciklama" type="text" required>@item.Aciklama</textarea>
            </div>
            <button type="submit">Güncelle</button>
        </div>
    }
</form>
