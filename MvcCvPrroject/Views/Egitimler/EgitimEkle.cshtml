</head>

<body>
    
    <form method="post">
        <div style="margin-top:5rem;" class="resume-section-content">

            <div class="field" tabindex="1">
                <label for="AdSoyad">
                    <i class="fa fa-text-width"></i>Başlık
                </label>
                <input name="Baslik" type="text" required></input>
            </div>
            <div class="field" tabindex="2">
                <label for="email">
                    <i class="fa fa-text-width"></i>Alt Başlık 1
                </label>
                <input name="AltBaslik1" type="text" required></input>
            </div>
            <div class="field" tabindex="3">
                <label for="text">
                    <i class="fa fa-text-width"></i>Alt Başlık 2
                </label>
                <input name="AltBaslik2" type="text" required></input>
            </div>
            <div class="field" tabindex="3">
                <label for="message">
                    <i class="fa fa-calendar"></i>Tarih
                </label>
                <input name="Tarih" type="text" required></input>
            </div>
            <div class="field" tabindex="3">
                <label for="message">
                    <i class="far fa-edit"></i>GNO
                </label>
                <input name="GNO" type="text" required></input>
            </div>
            <button type="submit">Kaydet</button>
        </div>
        </div>
    </form>
</body>
</html>











