@using MvcCvPrroject.Models.Entity
@model List<tblIletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Material Design Inbox Expansion Animation</title>
    <link rel="stylesheet" href="~/material-design-inbox-expansion-animation/dist/style.css">

</head>
<body>
    <!-- partial:index.partial.html -->
    <div id="app">
        <div class="header">
            <h3 id="header-content">Mesajlar</h3>
        </div>
        <div class="list">
            @foreach(var item in Model)
            {
                <div class="list-item" data-sender="@item.AdSoyad" data-subject="@item.Konu">
                    <img src="https://i.pravatar.cc/100?img=1" />
                    <div class="list-item-body">
                        <p>@item.AdSoyad</p>
                        <p>@item.Konu</p>
                    </div>
                </div>
            }
        </div>
        <div class="details-view">
            <h3 class="detail-heading"></h3>
            <div class="sender">
                <img id="sender-image" src="https://picsum.photos/100" />
                <div class="list-item-body" id="message-details">
                    <p></p>
                    <p></p>
                </div>
            </div>
            <div class="message-body"></div>
        </div>
    </div>
    <!-- partial -->
    <script src="~/material-design-inbox-expansion-animation/dist/script.js"></script>
</body>
</html>





